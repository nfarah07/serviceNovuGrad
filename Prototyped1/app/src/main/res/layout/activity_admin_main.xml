<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#252922"
                android:foregroundTint="#FFFFFF"
                tools:context=".CDisplayActivity">

    <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="65dp"
            android:fontFamily="cursive"
            android:text="          WELCOME "
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/colorAccent"/>

    <TextView
            android:id="@+id/textView5"
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="65dp"
            android:height="35sp"
            android:fontFamily="cursive"
            android:text="      Service Novigrad"
            android:textColor="#94E2EC"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/textView"
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="65dp"
            android:height="35sp"
            android:fontFamily="cursive"
            android:text="      Service Novigrad"
            android:textColor="#94E2EC"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/messageDisplayID"
            android:layout_width="368dp"
            android:layout_height="160dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="293dp"
            android:background="#FFFFFF"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="sans-serif"
            android:textSize="25dp" android:textColor="@color/colorAccent"/>

</RelativeLayout>