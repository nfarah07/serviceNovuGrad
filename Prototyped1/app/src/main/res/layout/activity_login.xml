<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D8EC1"
    android:backgroundTint="#6D97B8"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="65dp"
            android:fontFamily="cursive"
            android:text="           WELCOME "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="cursive"
            android:text=" TO"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="65dp"
            android:fontFamily="cursive"
            android:text="            Service Novigrad"
            android:textColor="#94E2EC"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:background="#E49521"
            android:backgroundTint="#009688"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:background="#E49521"
            android:backgroundTint="#009688"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Password" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/btnScustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer" />

            <RadioButton
                android:id="@+id/btnSEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="138dp"
            android:layout_height="23dp"
            android:background="#FFFFFF"
            android:text="Please Select a Role" />

        <Button
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>